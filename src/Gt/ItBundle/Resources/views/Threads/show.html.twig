{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Threads</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ entity.userid }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ entity.mail }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_threads',{ 'id': entity.id,'comment_id':entity.thread }) }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_threads_edit', { 'id': entity.id,'comment_id':entity.thread }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
