        <!-- End Header -->
        <!-- === END HEADER === -->
        <!-- === BEGIN CONTENT === -->
        <div id="content">
            <div class="container background-white">
                <div class="row margin-vert-30">
                    <!-- Main Column -->
                    <div class="col-md-9">
                        <div class="blog-post">
                            <div class="blog-post-date pull-left">
                                <span class="day">{{advert.date|date('  d')}}</span>
                                <span class="month">{{advert.date|date('M')}}</span>
                                <br>
                                <span class="year">{{advert.date|date('y')}}</span>
                            </div>
                            <div class="blog-item-header">
                                <!-- Title -->
                                <h2>
                                 
                                       {{advert.title}}
                                  
                                </h2>
                                <!-- End Title -->
                                <!-- Blog Item Details -->
                                <div class="blog-post-details">
                                    <!-- Author Name -->
                                    <div class="blog-post-details-item blog-post-details-item-left user-icon">
                                        <i class="fa fa-user color-gray-light"></i>
                                      {{advert.author}}
                                    </div>
                                    <!-- End Author Name -->
                                    <!-- Date -->
                                    <div class="blog-post-details-item blog-post-details-item-left">
                                        <i class="fa fa-calendar color-gray-light"></i>
                                        <a href="#">{{advert.date|date('d,M,y')}}</a>
                                    </div>
                                    <!-- End Date -->
                                    <!-- Tags -->
                                    <div class="blog-post-details-item blog-post-details-item-left blog-post-details-tags">
                                        <i class="fa fa-tag color-gray-light"></i>
                                        <a href="#">PHP</a>,
                                        <a href="#">Javascript</a>,
                                        <a href="#">CoffeeScript</a>
                                    </div>
                                    <!-- End Tags -->
                                    <!-- # of Comments -->
                                    <div class="blog-post-details-item blog-post-details-item-left blog-post-details-item-last">
                                        <a href="">
                                            <i class="fa fa-comments color-gray-light"></i>
                                            3 Comments
                                        </a>
                                    </div>
                                    <!-- End # of Comments -->
                                </div>
                                <!-- End Blog Item Details -->
                            </div>
                            <!-- Blog Item -->
                            <div class="blog-item">
                                <div class="clearfix"></div>
                                <div class="blog-post-body row margin-top-15">
                                    <div class="col-md-12">
                                <div class="post-image">   <img src="{{ ('uploads/blog/pic/' ~ advert.image.profilePicturePath)|imagine_filter('o') }}" class="image" alt="image1"></div>
                                    </div>
                                   
                                       
                                </div>
                                   <br>   <br>
                                <div class="blog-item-footer" id="a">
                                    <!-- About the Author -->
                                    <div class="blog-author panel panel-default margin-bottom-30">
                                        <div class="panel-heading">
                                   
                                        </div>
                                        <div class="panel-body">
                                            <div class="row">
                                               
                                                <div class="col-md-12">
                                                    
                                                    <p> {{advert.content|raw}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End About the Author -->
                                    <!-- Comments -->
                                    <div class="blog-recent-comments panel panel-default margin-bottom-30">
                                        <div class="panel-heading">
                                            <h3>Comments</h3>
                                        </div>
                                        <ul class="list-group">
                                            {% for c in comments %}
                                                
                                        
                                            <li class="list-group-item">
                                                <div class="row">
                                                    <div class="col-md-2 profile-thumb">
                                                       {% if     c.user != NULL %}
                                                            <img class="media-object" src="{{ asset(c.user.profilePicturePath) }}" alt="">
                                                        {% else %}
                                                             <img class="media-object" src="{{ asset('an.png') }}" alt="">
                                                            {% endif %}
                                                   
                                                    </div>
                                                    <div class="col-md-10">
                                                     {% if   c.user != NULL %}   <h4> {{  c.user.username}}</h4> {% else %} <h4> {{  c.name}}</h4>
                                                         {% endif %}
                                                        <p>{{c.comment}}</p>
                                                        <span class="date">
                                                            <i class="fa fa-clock-o color-gray-light"></i>{{'  ' ~ c.date|ago}}</span>
                                                    </div>
                                                </div>
                                            </li>    {% endfor %}
                                          
                                            <!-- Comment Form -->
                                            <li class="list-group-item">
                                                <div class="blog-comment-form">
                                                    <div class="row margin-top-20">
                                                        <div class="col-md-12">
                                                            <div class="pull-left">
                                                                <h3>Leave a Comment</h3>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row margin-top-20">
                                                        <div class="col-md-12">
                                                            <form action="{{ path('gt_it_blogSingle',{'id': advert.id,'format':'html'}) }}" method="POST" >{% if   is_granted('IS_AUTHENTICATED_FULLY') == false  %}
                                                                <label>Name</label><span>*</span>
                                                                <div class="row margin-bottom-20">
                                                                    <div class="col-md-7 col-md-offset-0">
                                                                        <input name="name" class="form-control" type="text">
                                                                    </div></div>

                                                                    <label>Email
                                                                    <span>*</span>
                                                                </label>
                                                                <div class="row margin-bottom-20">
                                                                    <div class="col-md-7 col-md-offset-0">
                                                                        <input name="mail" class="form-control" type="email">
                                                                    </div>
                                                                </div>
                                                              

                                                            {% endif %}
                                                                
                                                                <label>Message</label>
                                                                <div class="row margin-bottom-20">
                                                                    <div class="col-md-11 col-md-offset-0">
                                                                        <textarea name="comment" class="form-control" rows="8"></textarea>
                                                                    </div>
                                                                </div>
                                                                <p>
                                                                    <button class="btn btn-primary" type="submit">Send Message</button>
                                                                </p>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                            <!-- End Comment Form -->
                                        </ul>
                                    </div>
                                    <!-- End Comments -->
                                </div>
                            </div>
                            <!-- End Blog Item -->
                        </div>
                        <!-- End Blog Post -->
                    </div>
                    <!-- End Main Column -->
                    <!-- Side Column -->
                    
 <div class="col-md-3">
                        <!-- Blog Tags -->
                        <div class="blog-tags">
                            <h3>Tags</h3>
                            <ul class="blog-tags">
                              {% for tag in tags %}
                                
                             
                                <li>
                                      <a href="#" class="blog-tag" size="5px"><font color="#001f3f" size="3.5px">{{tag.title | capitalize}}</font></a>
                                </li>
                               {% endfor %}
                            </ul>
                        </div>
                        <!-- End Blog Tags -->
                        <!-- Recent Posts -->
                       <div class="archives">
                            <h3>Archives</h3>
                        <ul>
                            <li><a href="#">November,2013</a></li>
                            <li><a href="#">May,2013</a></li>
                            <li><a href="#">April,2013</a></li>
                            <li><a href="#">June,2013</a></li>
                            <li><a href="#">August,2013</a></li>
                            <li><a href="#">January,2013</a></li>
                        </ul>
                        </div>
                        <br>
                        <div class="recent-posts">
                            <h3>Recent Posts</h3>
                            <ul class="posts-list margin-top-10">
                                  
                                {% for item in tags %}
  
                       
        
                                <li>
  
                                                              <div class="recent-post">
                                        <a href="">
                                            <img class="pull-left" src="{{('uploads/blog/pic/' ~ item.image.profilePicturePath)|imagine_filter('t')}}" alt="thumb1">
                                        </a>
                                        <a href="#" class="posts-list-title">{{item.title |capitalize}}</a>
                                        <br>
                                        <span class="recent-post-date">
                                                     {{item.date|date('d/M/Y')}}
                                        </span>
                                    </div>
                                    <div class="clearfix"></div>
                                </li>
{% endfor %}
                            </ul>
                        </div>
                        <!-- End Recent Posts -->
                    </div>

                        <!-- End Blog Tags -->
                        <!-- Recent Posts -->
                     
                        <!-- End Recent Posts -->
                        <!-- End Side Column -->
                    </div>
                </div>
            </div>
        </div>
